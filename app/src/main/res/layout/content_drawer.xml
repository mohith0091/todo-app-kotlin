<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical"
    app:layout_location="drawer_panel">

    <com.google.android.material.textview.MaterialTextView
        style="@style/TitleTextStyle"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Version 1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="10dp"
        style="@style/TitleTextStyle"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="This app is written in kotlin and it is avilable in Github\nDesigned and Managed by Mohith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/get_source_code"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Get Source Code"
        style="@style/ButtonStyle.Colored"/>

</LinearLayout>